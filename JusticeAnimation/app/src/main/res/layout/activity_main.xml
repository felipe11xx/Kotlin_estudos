<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/main_layout">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/wonderwoman"
            android:id="@+id/imgWonderWoman" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/wonderwoman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twtWonderWomanTitle"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imgWonderWoman"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/wonderwoman_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtWonderWomanDesc"
            android:alpha="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/twtWonderWomanTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp" app:srcCompat="@drawable/batman"
            android:id="@+id/imgBatman" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtWonderWomanDesc" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/batman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBatmanTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBatman" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <TextView
            android:text="@string/batman_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:alpha="0"
            android:id="@+id/txtBatmanDesc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtBatmanTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp" app:srcCompat="@drawable/superman"
            android:id="@+id/imgSuperman" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtBatmanDesc" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/superman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSupermanTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgSuperman" android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/superman_desc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtSupermanDesc" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSupermanTitle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:alpha="0"/>
</android.support.constraint.ConstraintLayout>